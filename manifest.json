{
  "manifest_version": 3,
  "name": "ChatBackup - WhatsApp Export",
  "version": "1.7.0",
  "description": "Exporta conversas do WhatsApp Web (HTML/CSV/JSON/TXT) com hist√≥rico completo via API interna (WAWeb*). Processamento 100% local.",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "notifications"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    },
    "default_title": "ChatBackup"
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "styles/injected.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content/extractor.js",
        "libs/jszip.min.js"
      ],
      "matches": [
        "https://web.whatsapp.com/*"
      ]
    }
  ]
}